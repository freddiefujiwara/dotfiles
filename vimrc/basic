set shiftwidth=2
set tabstop=2
set expandtab
set nocompatible
set splitbelow
set splitright
set scrolloff=5
set textwidth=0
set nobackup
set autoread
set noswapfile
set hidden
set backspace=indent,eol,start
set formatoptions=lmo
set vb t_vb=
set showcmd
set showmode
set modelines=0
set mouse=a
set updatetime=300
set timeoutlen=500
set completeopt=menuone,noinsert,noselect
set wildmode=longest:full,full
set wildmenu
"use OS clipboard
if has('clipboard')
  set clipboard+=unnamed,unnamedplus
endif
" set ttymouse=xterm2
set list
set encoding=utf-8
set number
set relativenumber
set cursorline
set signcolumn=yes
set ruler
syntax on
filetype plugin indent on
if has('termguicolors')
  set termguicolors
endif
set background=dark
let g:gruvbox_contrast_dark = 'medium'
let g:gruvbox_sign_column = 'bg0'
if !empty(globpath(&rtp, 'colors/gruvbox.vim'))
  colorscheme gruvbox
else
  colorscheme default
endif
highlight CursorLine cterm=NONE ctermbg=236 guibg=#3c3836
highlight CursorLineNr cterm=bold ctermfg=214 ctermbg=236 guifg=#fabd2f guibg=#3c3836
"for search
set ignorecase
set smartcase
set incsearch
set history=1000
if has('persistent_undo')
  set undofile
  set undodir=~/.vim/undodir
endif
